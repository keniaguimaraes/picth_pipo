<%= turbo_frame_tag :remote_modal, target: :_top do %>
  <div class="modal fade" data-controller="modal">
   <div id="flash" class="flash">
      <%= render "layouts/flash" %>
   </div>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"></h5>
        </div>
        <div class="modal-body">
          <%= render "funcionariobeneficios/form", funcionariobeneficio: funcionariobeneficio %>
        </div>
        <div class="modal-footer" id="modal-footer-funcionariobeneficio">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
