<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Pipo Saúde">
    <meta name="author" content="Kenia Guimarães">

    <title>Pipo Saúde</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "sb-admin-2.min" %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag %>

  </head>
  <body id="page-top">
    <div id="wrapper">
      <!-- Sidebar -->
      <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

        <!-- Sidebar - Brand -->
        <%= link_to root_path, class: "sidebar-brand d-flex align-items-center justify-content-center"  do %>
          <div class="sidebar-brand-text mx-3">Pipo Saúde <i class="fas fa-heartbeat"></i></div>
        <%end%>

        <!-- Divider -->
        <hr class="sidebar-divider my-0">

        <!-- Nav Item - Dashboard -->

        <!-- Divider -->
        <hr class="sidebar-divider">
        <li class="nav-item">
          <%= link_to root_path, class: "nav-link"  do %>
            <i class="fas fa-fw fa-tachometer-alt"></i>
              <span>Dashboard</span></a>
          <%end%>
        </li>
        <!-- Divider -->
        <hr class="sidebar-divider">

        <div class="sidebar-heading">
        Cadastro
        </div>
        <li class="nav-item">
          <%= link_to clientes_path, class: "nav-link"  do %>
            <i class="fad fa-users-medical"></i>
            <span>Clientes </span>
          <%end%>
        </li>

        <li class="nav-item">
          <%= link_to beneficios_path, class: "nav-link"  do %>
            <i class="fad fa-users-medical"></i>
            <span>Benefícios </span>
          <%end%>
        </li>

       <!-- <hr class="sidebar-divider">
        <div class="sidebar-heading">
        Paramêtros
        </div>
        <li class="nav-item">
        <%= link_to root_path, class: "nav-link"  do %>
          <i class="fas fa-fw fa-notes-medical"></i>
          <span>Cliente x Beneficio</span>
        <%end%>-->

        <hr class="sidebar-divider">
        <div class="sidebar-heading">
        Fichas
        </div>
        <li class="nav-item">
        <%= link_to funcionarios_path, class: "nav-link"  do %>
          <i class="fas fa-fw fa-notes-medical"></i>
          <span>Funcionários</span>
        <%end%>
        <hr class="sidebar-divider">
        <div class="sidebar-heading">
          Links
        </div>
        <%= link_to "https://github.com/keniaguimaraes/picth_pipo", class: "nav-link"  do %>
          <i class="fas fa-fw fa-link"></i>
          <span>Github</span>
        <%end%>
      </li>
      </ul>
      <!-- End of Sidebar -->
      
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <!-- Topbar -->
          <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

            <!-- Sidebar Toggle (Topbar) -->
            <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
              <i class="fa fa-bars"></i>
            </button>

      
            <!-- Topbar Navbar -->
            <ul class="navbar-nav ml-auto">

              <!-- Nav Item - Search Dropdown (Visible Only XS) -->
              <li class="nav-item dropdown no-arrow d-sm-none">
               
                <!-- Dropdown - Messages -->
                <div class="dropdown-menu dropdown-menu-right p-3 shadow animated--grow-in" aria-labelledby="searchDropdown">
            
              </li>

              <div class="topbar-divider d-none d-sm-block"></div>

            </ul>

          </nav>
          <!-- End of Topbar -->
          <div class="container-fluid">
          <ul class="breadcrumb">
              <%= render_breadcrumbs :tag=> :li, :separator => " > " %>
          </ul>
             <% unless flash.empty? %>
                <script type="text/javascript">
                    <% flash.each do |f| %>
                    <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
                    toastr['<%= type %>']('<%= f[1] %>');
                    <% end %>
                </script>
             <% end %>
            <%= turbo_frame_tag "remote_modal" %>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
